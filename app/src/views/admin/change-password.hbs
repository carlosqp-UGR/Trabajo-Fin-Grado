<main class="container p-4">
    <h1 class="my-2">Cambiar contraseña</h1>
    <div class="row justify-content-center">
        <div class="col-xl-6 my-4">
            <div class="card">
                <form action="/admin/usuarios/change-password/{{usuario.id}}" method="POST">
                    <div class="card-body text-start">
                        <div class="mb-3">
                            <label for="id" class="form-label">ID:</label>
                            <input type="text" id="id" name="id" class="form-control" value="{{usuario.id}}" readonly disabled>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario:</label>
                            <input type="text" id="username" name="username" class="form-control" value="{{usuario.username}}" readonly disabled>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Nueva contraseña:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                    </div>

                    <div class="card-footer text-end">
                        <!-- Columna derecha -->
                            <a class="btn btn-secondary me-2" href="/admin/usuarios/edit/{{usuario.id}}">Cancelar</a>
                            <button class="btn btn-primary" type="submit">Guardar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</main>
