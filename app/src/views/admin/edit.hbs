<main class="container p-4">
    <h1 class="my-2">Cambiar contraseña</h1>
    <div class="row justify-content-center">
        <div class="col-xl-6 my-4">
            <div class="card">
                <form action="/admin/usuarios/edit/{{usuario.id}}" method="POST">
                    <div class="card-body text-start">
                        <div class="mb-3">
                            <label for="id" class="form-label">ID:</label>
                            <input type="text" id="id" class="form-control" value="{{usuario.id}}" readonly disabled>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" id="username" name="username" class="form-control" value="{{usuario.username}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Nombre completo:</label>
                            <input type="text" id="fullname" name="fullname" class="form-control" value="{{usuario.fullname}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="admin" class="form-label">Administrador:</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="admin" id="adminYes" value="si" {{#if usuario.admin}}checked{{/if}}>
                                <label class="form-check-label" for="adminYes">Sí</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="admin" id="adminNo" value="no" {{#unless usuario.admin}}checked{{/unless}}>
                                <label class="form-check-label" for="adminNo">No</label>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <!-- Columna izquierda -->
                        <div class="col-auto text-start">
                            <a class="btn btn-success ms-0" href="/admin/usuarios/change-password/{{usuario.id}}">Cambiar Contraseña</a>
                        </div>

                        <!-- Columna derecha -->
                        <div class="col-auto text-end justify-content-between">
                            <a class="btn btn-secondary me-2" href="/admin/usuarios">Cancelar</a>
                            <button class="btn btn-primary" type="submit">Guardar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</main>
