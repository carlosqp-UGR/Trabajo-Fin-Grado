<main class="container px-5">
    <div id="message-id" class="mt-5"></div>
    <h1 class="mt-2 mb-5 py-1">Listado de Escalas</h1>
    <div class="container-fluid">
    <form id="form-id" onsubmit="handleScaleListFormSubmit(event, 'form-id', 'message-id', '{{apiUrl}}', '{{printUrl}}')">
        <div class="row pb-3">Seleccione los campos (obligatorio):</div>
        <!--
        [
        'id',                 'numero',
        't2l',                'dua',
        'entrada',            'salida',
        'carga',              'material',
        'cargador_id',        'buque_id',
        'capitan',            'armador_id',
        'origen',             'destino',
        'puerto',             'arrival_on_the_road',
        'entrada_fondeadero', 'salida_fondeadero',
        'atraque_puerto',     'inicio_carga',
        'fin_carga',          'salida_puerto',
        'observaciones',      'armador_nombre',
        'cargador_nombre',    'buque_nombre'
        ]
        -->
        <div class="row">
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="numero" id="numero">
                <label class="form-check-label" for="numero">NÃºmero</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="buque_nombre" id="buque_nombre">
                <label class="form-check-label" for="buque_nombre">Buque</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="t2l" id="t2l">
                <label class="form-check-label" for="t2l">T2L</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="dua" id="dua">
                <label class="form-check-label" for="dua">DUA</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="entrada" id="entrada">
                <label class="form-check-label" for="entrada">Entrada</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="salida" id="salida">
                <label class="form-check-label" for="salida">Salida</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="armador_nombre" id="armador_nombre">
                <label class="form-check-label" for="armador_nombre">Armador</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="cargador_nombre" id="cargador_nombre">
                <label class="form-check-label" for="cargador_nombre">Cargador</label>
            </div>  
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="origen" id="origen">
                <label class="form-check-label" for="origen">Origen</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="destino" id="destino">
                <label class="form-check-label" for="destino">Destino</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="capitan" id="capitan">
                <label class="form-check-label" for="capitan">Capitan</label>
            </div> 
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="puerto" id="puerto">
                <label class="form-check-label" for="puerto">Puerto</label>
            </div> 
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="material" id="material">
                <label class="form-check-label" for="material">Material</label>
            </div>
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="carga" id="carga">
                <label class="form-check-label" for="carga">Carga</label>
            </div>            
            <div class="col-lg-3 col-sm-6 my-2 form-check">
                <input class="form-check-input" type="checkbox" name="observaciones" id="observaciones">
                <label class="form-check-label" for="observaciones">Observaciones</label>
            </div>
          
        </div>
