<main class="container p-4">
  <form class="mx-auto card p-4 w-100 p-2 shadow-sm" autocomplete="off" action="{{target}}/edit/{{data.id}}" method="POST" style="max-width: 400px; margin: auto;">
    <h1 class="h3 mb-3 text-center fw-bold">Editar usuario</h1>

    <label for="username" class="text-start ms-0">Usuario</label>
    <input type="text" name="username" id="username" class="form-control mb-3" value="{{data.username}}" required="" autofocus="">

    <label for="fullname" class="text-start ms-0">Nombre completo</label>
    <input type="text" name="fullname" id="fullname" class="form-control mb-3" value="{{data.fullname}}" required="" autofocus="">

    {{!--
