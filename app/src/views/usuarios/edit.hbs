      <button id="toggle-password" type="button" class="" aria-label="Show password as plain text. Warning: this will display your password on the screen."></button>
    </div>
    --}}

    <div class="form-check text-start my-3">
      <label class="form-label" >Administrador:  </label>
      <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="admin" id="admin1" value="si" {{#if data.admin}}checked{{/if}}>
          <label class="form-check-label" for="admin1">Sí</label>
      </div>
      <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="admin" id="admin2" value="no" {{#unless data.admin}}checked{{/unless}}>
          <label class="form-check-label" for="admin2">No</label>
      </div>
    </div>

    <button class="btn btn-primary my-2" type="submit">Guardar</button>
    <button class="btn btn-outline-success my-2" type="button" onclick="window.location.href='{{target}}/change-password/{{data.id}}'">Cambiar Contraseña</button>
    <button class="btn btn-secondary my-2" type="button" onclick="window.location.href='{{target}}'">Cancelar</button>  
  </form>
</main>

