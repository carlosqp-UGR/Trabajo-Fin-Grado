<main class="container p-4">
  <form class="mx-auto card p-4 w-100 p-2 shadow-sm" autocomplete="off" {{#if edit}}action="{{target}}/edit" method="POST" {{/if}}style="max-width: 400px; margin: auto;">
    <h1 class="h3 mb-3 text-center fw-bold">{{#if edit}}Editar perfil{{else}}Mi perfil{{/if}}</h1>

    <label for="username" class="text-start ms-0">Usuario</label>
    <input type="text" name="username" id="username" class="form-control mb-3" value="{{data.username}}" required="" autofocus="" {{#unless edit}} readonly {{/unless}}>

    <label for="fullname" class="text-start ms-0">Nombre completo</label>
    <input type="text" name="fullname" id="fullname" class="form-control mb-3" value="{{data.fullname}}" required="" autofocus="" {{#unless edit}} readonly {{/unless}}>

    {{#unless edit}}{{#if data.admin}}
    <div class="form-check text-start my-3">
      <label class="form-label" >Administrador:  </label>
      <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="admin" id="admin1" value="si" {{#if data.admin}}checked{{else}}disabled{{/if}}>
          <label class="form-check-label" for="admin1">Sí</label>
      </div>
      <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="admin" id="admin2" value="no" {{#unless data.admin}}checked{{else}}disabled{{/unless}}>
          <label class="form-check-label" for="admin2">No</label>
      </div>
    </div>
    {{/if}}{{/unless}}

    {{#if edit}}
    <button class="btn btn-primary my-2" type="submit">Guardar</button>
    <button class="btn btn-outline-success my-2" type="button" onclick="window.location.href='{{target}}/change-password'">Cambiar Contraseña</button>
    <button class="btn btn-secondary my-2" type="button" onclick="window.location.href='{{target}}'">Cancelar</button>  
    {{else}}
    <button class="btn btn-primary my-2" type="button" onclick="window.location.href='{{target}}/edit'">Editar</button>
    {{/if}}
  </form>
</main>

